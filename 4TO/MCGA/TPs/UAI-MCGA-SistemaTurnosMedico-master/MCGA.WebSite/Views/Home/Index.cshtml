@{
    ViewBag.Title = "Nuestros servicios para usted";
    ViewBag.Description = "En esta página vamos a poder ver la información general de la empresa, como nuestros consultorios, nuestros servicios, quienes somos.";
    ViewBag.Author = Application.Name;
    ViewBag.ReferrerMode = ReferrerMode.OriginWhenCrossOrigin;
    ViewBag.TwitterCard = new SummaryLargeImageTwitterCard("@TwitterCard");
    ViewBag.OpenGraph = new OpenGraphBusiness(
        ViewBag.Title,
        new OpenGraphImage(Url.AbsoluteContent("~/fonts/icons/open-graph-1200x630.png")) { Height = 630, Type = ContentType.Png, Width = 1200 },
        new OpenGraphContactData(Application.StreetAddress, Application.Locality, Application.PostalCode, Application.Country)
        {
            Email = Application.Email,
            Phone = Application.Phone,
            Website = Url.AbsoluteRouteUrl(HomeControllerRoute.GetIndex)
        },
        new OpenGraphLocation(Application.Latitude, Application.Longitude))
    {
        Determiner = OpenGraphDeterminer.Blank,
        SiteName = Application.Name
    };
}

<link href="~/Content/Carousel.min.css" rel="stylesheet" />

<div id="carouselPrincipal" class="carousel slide" data-ride="carousel" data-interval="3000">
    <ol class="carousel-indicators">
        <li data-target="#carouselPrincipal" data-slide-to="0" class="active"></li>
        <li data-target="#carouselPrincipal" data-slide-to="1"></li>
        <li data-target="#carouselPrincipal" data-slide-to="2"></li>
        <li data-target="#carouselPrincipal" data-slide-to="3"></li>
        <li data-target="#carouselPrincipal" data-slide-to="4"></li>
        <li data-target="#carouselPrincipal" data-slide-to="5"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/fonts/Profesionales.jpg" alt="Nuestros profesionales">
            <div class="carousel-caption d-none d-md-block">
                @Html.Partial("_ButtonCarrousel")
                <span>Nuestros profesionales</span>
                <p>Contamos con un grupo de profesionales especializados para ayudarte</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/fonts/EstamosParaCuidarte.jpg" alt="Estamos para cuidarte">
            <div class="carousel-caption d-none d-md-block">
                @Html.Partial("_ButtonCarrousel")
                <span>Estamos para cuidarte</span>
                <p>Contamos con equipos de última tecnología para un mejor resultado de tus estudios</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/fonts/Consultorio1.jpg" alt="Nuestros consultorios">

            <div class="carousel-caption d-none d-md-block">
                @Html.Partial("_ButtonCarrousel")
                <span>Nuestros consultorios</span>
                <p>Contamos con consultorios amplios, modernos y totalmente equipados para vos</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/fonts/Recepcion.jpg" alt="Atención a nuestros pacientes">
            <div class="carousel-caption d-none d-md-block">
                @Html.Partial("_ButtonCarrousel")
                <span>Atención a nuestros pacientes</span>
                <p>Contamos con un personal administrativo que esta preparado para ayudarte</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/fonts/SalaDeEspera.jpg" alt="Tu espera mucho más cómoda">
            <div class="carousel-caption d-none d-md-block">
                @Html.Partial("_ButtonCarrousel")
                <span>Tu espera mucho más cómoda</span>
                <p>
                Nuestra sala de espera cuanta con lo necesario para que te sientas como en tu casa
                </p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/fonts/ObrasSociales.jpg" alt="Obras sociales y prepagas">
            <div class="carousel-caption d-none d-md-block">
                @Html.Partial("_ButtonCarrousel")
                <span>Obras sociales y prepagas</span>
                <p>
                    Atendemos estas y muchas mas obras sociales y prepagas, consulte para más información!
                </p>
            </div>
        </div>
    </div>
</div>

