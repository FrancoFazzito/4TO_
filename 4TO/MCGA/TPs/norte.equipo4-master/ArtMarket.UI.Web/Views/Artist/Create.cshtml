@{
    ViewBag.Title = "Cargar artista";
}
<div >
    <form  method="post" action="/Artist/Create">
        <h2 style="padding-bottom: 10px">Cargar artista</h2>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="firstName">Nombre: </label>
                <input type="text" class="form-control" id="firstName" name="firstName" value="" placeholder="">
            </div>

            <div class="form-group col-md-6">
                <label for="lastName">Apellido: </label>
                <input type="text" class="form-control" id="lastName" name="lastName" value="" placeholder="">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="lifeSpan">Años de vida</label>
                <input type="number" class="form-control" id="lifeSpan" name="lifeSpan" min="1" max="110" value="60">
            </div>

            <div class="form-group col-md-6">
                <label for="country">País</label>
                <input type="text" class="form-control" id="country" name="country" value="" placeholder="">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6"> 
                <label for="description">Descripción</label>
                <input type="text" class="form-control" id="description" name="description" value="" placeholder="">
            </div>

            <div class="form-group col-md-6">
                <label for="totalProducts">Cantidad de cuadros</label>
                <input type="number" class="form-control" id="totalProducts" name="totalProducts" min="1" max="500" value="10">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
</div>