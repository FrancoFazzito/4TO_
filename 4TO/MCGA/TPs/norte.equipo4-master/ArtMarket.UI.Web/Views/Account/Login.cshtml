@model ArtMarket.UI.Web.Models.LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
}

@section AddToHead{
    <!-- Login styles -->
    <link href="@Url.Content("~/Content/css/login/main.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/login/util.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/login/animsition.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/login/select2.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/login/animate.css")" rel="stylesheet" type="text/css" />

    <!-- Login fonts -->
    <link href="@Url.Content("~/Content/fonts/login/Linearicons-Free-v1.0.0/icon-font.min.css")" rel="stylesheet" type="text/css" />
}

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-50">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login100-form validate-form", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <span class="login100-form-title p-b-33">
                    Ingresar a mi cuenta
                </span>
                <form method="post" action="/User/Login">
                    <div class="wrap-input100 validate-input" data-validate="Se requiere un email válido: ejemplo@abc.com">
                        <input class="input100" type="text" name="email" placeholder="Email">
                        <span class="focus-input100-1"></span>
                        <span class="focus-input100-2"></span>
                    </div>
                    <div class="wrap-input100 rs1 validate-input" data-validate="Debe completar la contraseña">
                        <input class="input100" type="password" name="password" placeholder="Contraseña">
                        <span class="focus-input100-1"></span>
                        <span class="focus-input100-2"></span>
                    </div>
                    <div class="custom-control custom-checkbox">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "custom-control-input" })
                        <label class="custom-control-label" for="RememberMe">Recordarme</label>
                    </div>
                  

                    <button type="submit" class="login100-form-btn">Iniciar sesión</button>

                </form>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="text-center p-t-45 p-b-4">
                        <span class="txt1">¿Olvidaste</span>
                        <a href="/Account/ForgotPassword" class="txt2 hov1">usuario / contraseña?</a>
                    </div>
                    <div class="text-center">
                        <span class="txt1">¿Crear una cuenta?</span>
                        <a href="/Account/Register" class="txt2 hov1">Registro</a>
                    </div>
                    }
            </div>
    </div>
</div>

<!-- Login scripts -->
@section Scripts {
    @Scripts.Render("~/bundles/login")

    @* versión anterior *@
    @Scripts.Render("~/bundles/jqueryval")
}