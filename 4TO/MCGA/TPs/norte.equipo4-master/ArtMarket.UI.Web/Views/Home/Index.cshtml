<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-4">
                <div class="section-title">
                    <h4>Nuevos Productos</h4>
                </div>
            </div>
            <div class="col-lg-8 col-md-8">
                <ul class="filter__controls">
                    <li class="active" data-filter="*">Todos</li>
                    @*<li data-filter=".women">Women’s</li>
                        <li data-filter=".men">Men’s</li>
                        <li data-filter=".kid">Kid’s</li>
                        <li data-filter=".accessories">Accessories</li>
                        <li data-filter=".cosmetic">Cosmetics</li>*@
                </ul>
            </div>
        </div>
        <div class="row property__gallery">
            @if (Model != null)
            {
                for (int i = 0; i < Model.Count; i++)
                {
                    var item = Model[i];
                    <div class="col-lg-3 col-md-4 col-sm-6 mix women">
                        <div class="product__item">
                            <div class="product__item__pic set-bg" data-setbg="Content/img/product/@item.Image">
                                <div class="label new">Nuevo</div>
                                <!-- Otros ejemplos de etiquetas que se pueden usar. También es posible no poner ninguna. -->
                                @*<div class="label stockout">Sin stock</div>*@
                                @*<div class="label sale">Oferta</div>*@
                                <ul class="product__hover">
                                    <li><a href="~/Content/img/product/@item.Image" title="Expandir imagen" class="image-popup"><span class="arrow_expand"></span></a></li>
                                    <li><a href="/Cart/Add?id=@item.Id"><span class="icon_cart" title="Comprar"></span></a></li>
                                    @*TODO:*@
                                    @*<li><a href="@Url.Action("Add", "Cart", new { id = item.Id})" title="Comprar ahora"><span class="icon_bag_alt"></span></a></li>*@
                                </ul>
                            </div>
                            <div class="product__item__text">
                                @*TODO:*@
                                @*<h6><a href="@Url.Action("Details", "Product", new { id = item.Id})" title="Ver detalle del producto">@item.Title - @item.Artist.LastName</a></h6>*@
                                <div class="rating">
                                    @for (int stars = 1; stars <= @item.AvgStars; stars++)
                                    {
                                        <i class="fa fa-star"></i>
                                    }
                                </div>
                                <div class="product__price">$ @item.Price</div>
                                @* Precio con oferta (para usar con etiqueta "SALE")
                            <div class="product__price">$ 49.0 <span>$ 59.0</span></div>*@
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>
