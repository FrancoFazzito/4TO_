@model ArtMarket.Entities.Model.Product


<div class="details">

		<div class="form-dialog">

				<h2>@Model.Title - @Model.ArtistId</h2>

				<br />
				<br />
				<p class="details-description">@Model.Description</p>
				
				<picture>
						<img class="details-product-picture" src="/Content/Img/Product/@Model.Image" alt="Imagen no disponible" />
				</picture>
				<div class="rating">
						@for (int i = 0; i < Model.AvgStars; i++)
						{
								<span class="star-yellow">☆</span>
						}
						@for (int i = (int)Model.AvgStars; i < 5; i++)
						{
								<span class="star">☆</span>
						}
				</div>

				<div class="details-price">
						<p>U$S @Model.Price.-</p>
				</div>

				@*<button class="button-principal" onclick="location.href = '@Url.Action("Add", "Cart", new { id = Model.Id})'">Añadir</button>*@

				<br />

		</div>

</div>